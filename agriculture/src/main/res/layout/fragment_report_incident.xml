<?xml version="1.0" encoding="utf-8"?>
<!-- This file defines the layout for the Report Incident screen. -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFE6A7"
        android:fillViewport="true"
        tools:context=".features.incidentReporting.ui.ReportIncidentFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Dropdown for incident type -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/incident_type_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Type of Incident"
                app:boxBackgroundColor="#99582a"
                app:boxBackgroundMode="outline"
                app:hintTextColor="#3E2723"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <AutoCompleteTextView
                    android:id="@+id/incident_type_autocomplete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textColor="#432818"
                    android:textColorHint="#3E2723"
                    android:textColorLink="#432818" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Label for Date and Time -->
            <TextView
                android:id="@+id/date_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="DATE + TIME OF INCIDENT"
                android:textColor="#432818"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/incident_type_layout" />

            <!-- Date Picker -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/date_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:boxBackgroundColor="#99582a"
                app:boxStrokeColor="#432818"
                app:hintTextColor="#3E2723"
                app:layout_constraintEnd_toStartOf="@id/time_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/date_time_label">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/date_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:foregroundTint="#432818"
                    android:hint="Select Date"
                    android:textColor="#432818"
                    android:textColorHint="#3E2723"
                    android:textColorLink="#432818" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Time Picker -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/time_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:boxBackgroundColor="#99582a"
                app:boxStrokeColor="#432818"
                app:hintTextColor="#3E2723"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/date_layout"
                app:layout_constraintTop_toTopOf="@id/date_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/time_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:foregroundTint="#432818"
                    android:hint="Select Time"
                    android:textColor="#432818"
                    android:textColorHint="#3E2723"
                    android:textColorLink="#432818" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Input for injured person's name -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/injured_person_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="NAME OF INJURED PERSON"
                app:boxStrokeColor="#99582a"
                app:boxStrokeErrorColor="#99582a"
                app:hintTextColor="#3E2723"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/date_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/injured_person_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#99582a"
                    android:backgroundTint="#99582a"
                    android:textColor="#432818"
                    android:textColorHint="#3E2723"
                    android:textColorLink="#432818" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Label for taking a photo -->
            <TextView
                android:id="@+id/photo_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="TAKE A PHOTO OF THE SITE, SCENE, OR INJURY"
                android:textColor="#432818"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/injured_person_layout" />

            <!-- Image view for photo with a standard border -->
            <ImageView
                android:id="@+id/photo_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:contentDescription="Take a photo"
                android:padding="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_camera"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/photo_label"
                app:tint="#432818" />

            <!-- Label for witnesses -->
            <TextView
                android:id="@+id/witness_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="WHO WITNESSED THE ACCIDENT OR INCIDENT?"
                android:textColor="#432818"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/photo_image" />

            <!-- Container for witness fields -->
            <LinearLayout
                android:id="@+id/witness_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/witness_label" />

            <!-- Button to add more witnesses -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_more_button"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="+ ADD MORE"
                android:textColor="#ffe6a7"
                app:backgroundTint="#6f1d1b"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/witness_container" />

            <!-- Submit Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/submit_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="SUBMIT REPORT"
                android:textColor="#FFFFFF"
                app:backgroundTint="#432818"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_more_button" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>