<?xml version="1.0" encoding="utf-8"?>
<!-- Purpose: Reusable account card used in Settings -->
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/settings_card_bg"
        android:padding="12dp">

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_person" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/profile_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profileName"
                android:layout_width="288dp"
                android:layout_height="55dp"
                android:fontFamily="@font/fredoka_one"
                android:text="Manage your account"
                android:contentDescription="@string/acc_sub_text"
                android:textColor="@color/settings_text_primary"
                android:textSize="22sp" />

        </LinearLayout>

    </RelativeLayout>
</layout>