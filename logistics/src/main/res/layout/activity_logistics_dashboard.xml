<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".ui.LogisticsDashboard">

  <!-- Header Background -->
  <ImageView
      android:id="@+id/header_bg"
      android:layout_width="0dp"
      android:layout_height="180dp"
      android:background="#000000"
      android:contentDescription="@string/header_bg_desc"
      android:scaleType="fitXY"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <!-- Settings Icon -->
  <ImageView
      android:id="@+id/settingsIcon"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="16dp"
      android:contentDescription="@string/settings_icon_desc"
      android:src="@android:drawable/ic_menu_manage"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:tint="#FFFFFF" />

  <!-- App Logo/Title -->

  <!-- Profile Section -->
  <com.google.android.material.card.MaterialCardView
      android:id="@+id/profile_card"
      android:layout_width="100dp"
      android:layout_height="100dp"
      app:cardBackgroundColor="#FFFFFF"
      app:cardCornerRadius="50dp"
      app:cardElevation="8dp"
      app:layout_constraintBottom_toBottomOf="@id/header_bg"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@id/header_bg">

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/profile_pic_desc"
        android:padding="20dp"
        android:scaleType="centerInside"
        android:src="@android:drawable/ic_menu_my_calendar"
        app:tint="#1A4E8E" />
  </com.google.android.material.card.MaterialCardView>

  <!-- Greeting -->
  <TextView
      android:id="@+id/usernameText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:text="Hi, Driver"
      android:textColor="#FFFFFF"
      android:textSize="22sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/profile_card" />

  <!-- Sub Greeting -->
  <TextView
      android:id="@+id/subGreetingText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:text="Ready for today's deliveries?"
      android:textColor="#CCCCCC"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/usernameText" />

  <!-- Actions Grid inside ScrollView -->
  <ScrollView
      android:id="@+id/actionScroll"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:fillViewport="true"
      android:padding="8dp"
      app:layout_constraintBottom_toTopOf="@id/emergencyButtonCard"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/subGreetingText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

      <!-- Row 1: Two buttons -->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginVertical="16dp"
          android:gravity="center"
          android:orientation="horizontal">

        <!-- Vehicle Inspection -->
        <LinearLayout
            android:id="@+id/vehicleInspectionSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

          <com.google.android.material.card.MaterialCardView
              android:layout_width="80dp"
              android:layout_height="80dp"
              app:cardBackgroundColor="#000000"
              app:cardCornerRadius="40dp"
              app:strokeColor="#4CAF50"
              app:strokeWidth="2dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:contentDescription="@string/vehicle_inspection_desc"
                android:src="@android:drawable/ic_menu_agenda"
                app:tint="#FFFFFF" />
          </com.google.android.material.card.MaterialCardView>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:text="Vehicle Inspection"
              android:textAlignment="center"
              android:textColor="#FFFFFF"
              android:textSize="14sp" />
        </LinearLayout>

        <!-- Report Issue -->
        <LinearLayout
            android:id="@+id/reportIssueSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

          <com.google.android.material.card.MaterialCardView
              android:layout_width="80dp"
              android:layout_height="80dp"
              app:cardBackgroundColor="#000000"
              app:cardCornerRadius="40dp"
              app:strokeColor="#4CAF50"
              app:strokeWidth="2dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:contentDescription="@string/report_issue_desc"
                android:src="@android:drawable/ic_dialog_alert"
                app:tint="#FFFFFF" />
          </com.google.android.material.card.MaterialCardView>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:text="Report Issue"
              android:textAlignment="center"
              android:textColor="#FFFFFF"
              android:textSize="14sp" />
        </LinearLayout>
      </LinearLayout>

      <!-- Row 2: Single button -->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginVertical="16dp"
          android:gravity="center"
          android:orientation="horizontal">

        <!-- Health + Fitness -->
        <LinearLayout
            android:id="@+id/healthFitnessSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

          <com.google.android.material.card.MaterialCardView
              android:layout_width="80dp"
              android:layout_height="80dp"
              app:cardBackgroundColor="#000000"
              app:cardCornerRadius="40dp"
              app:strokeColor="#4CAF50"
              app:strokeWidth="2dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:contentDescription="@string/health_fitness_desc"
                android:src="@android:drawable/ic_menu_info_details"
                app:tint="#FFFFFF" />
          </com.google.android.material.card.MaterialCardView>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:text="Health + Fitness"
              android:textAlignment="center"
              android:textColor="#FFFFFF"
              android:textSize="14sp" />
        </LinearLayout>
      </LinearLayout>

      <!-- Row 3: Two buttons -->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginVertical="16dp"
          android:gravity="center"
          android:orientation="horizontal">

        <!-- Driving Tips -->
        <LinearLayout
            android:id="@+id/drivingTipsSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

          <com.google.android.material.card.MaterialCardView
              android:layout_width="80dp"
              android:layout_height="80dp"
              app:cardBackgroundColor="#000000"
              app:cardCornerRadius="40dp"
              app:strokeColor="#4CAF50"
              app:strokeWidth="2dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:contentDescription="@string/driving_tips_desc"
                android:src="@android:drawable/ic_menu_compass"
                app:tint="#FFFFFF" />
          </com.google.android.material.card.MaterialCardView>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:text="Driving Tips"
              android:textAlignment="center"
              android:textColor="#FFFFFF"
              android:textSize="14sp" />
        </LinearLayout>

        <!-- Checklist -->
        <LinearLayout
            android:id="@+id/checklistSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

          <com.google.android.material.card.MaterialCardView
              android:layout_width="80dp"
              android:layout_height="80dp"
              app:cardBackgroundColor="#000000"
              app:cardCornerRadius="40dp"
              app:strokeColor="#4CAF50"
              app:strokeWidth="2dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:contentDescription="@string/checklist_desc"
                android:src="@android:drawable/ic_menu_agenda"
                app:tint="#FFFFFF" />
          </com.google.android.material.card.MaterialCardView>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:text="Checklist"
              android:textAlignment="center"
              android:textColor="#FFFFFF"
              android:textSize="14sp" />
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>
  </ScrollView>

  <!-- Emergency Button -->
  <com.google.android.material.card.MaterialCardView
      android:id="@+id/emergencyButtonCard"
      android:layout_width="0dp"
      android:layout_height="60dp"
      android:layout_marginStart="24dp"
      android:layout_marginEnd="24dp"
      android:layout_marginBottom="24dp"
      app:cardBackgroundColor="#000000"
      app:cornerRadius="20dp"
      app:strokeColor="#FFEB3B"
      app:strokeWidth="2dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BA0C0C"
        android:gravity="center"
        android:orientation="horizontal">

      <ImageView
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:contentDescription="@string/emergency_icon_desc"
          android:src="@android:drawable/ic_menu_call"
          app:tint="#FFFFFF" />

      <TextView
          android:id="@+id/emergencyButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="8dp"
          android:text="EMERGENCY ASSISTANCE"
          android:textAllCaps="true"
          android:textColor="#FFFFFF"
          android:textSize="16sp"
          android:textStyle="bold" />
    </LinearLayout>
  </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
