<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#121212">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:context=".ui.VehicleInspection">

        <!-- Header Section -->
        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Vehicle Inspection"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Vehicle Information Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/vehicleInfoCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#1E1E1E"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/vehicleInfoLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Information"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/vinLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:boxBackgroundColor="@android:color/white"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeColor="#1E90FF"
                    app:hintTextColor="#666666"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/vinInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:hint="VIN Number"
                        android:inputType="textCapCharacters"
                        android:textColor="#121212"
                        android:textColorHint="#666666" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/licensePlateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:boxBackgroundColor="@android:color/white"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeColor="#1E90FF"
                    app:hintTextColor="#666666"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/licensePlateInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:hint="License Plate"
                        android:inputType="textCapCharacters"
                        android:textColor="#121212"
                        android:textColorHint="#666666" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Inspection Items Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/inspectionCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#1E1E1E"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/vehicleInfoCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/inspectionLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Inspection Items"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Exterior -->
                <TextView
                    android:id="@+id/exteriorLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Exterior"
                    android:textColor="#1E90FF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <LinearLayout
                    android:id="@+id/exteriorGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="4dp">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkTires"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#1E90FF"
                        android:text="Tires - Good condition and proper pressure"
                        android:textColor="@android:color/white" />
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkLights"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#1E90FF"
                        android:text="Lights - All functioning properly"
                        android:textColor="@android:color/white" />
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#1E90FF"
                        android:text="Body - No major damage or rust"
                        android:textColor="@android:color/white" />
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkWindows"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#1E90FF"
                        android:text="Windows - No cracks or damage"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <!-- Interior -->
                <TextView
                    android:id="@+id/interiorLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Interior"
                    android:textColor="#1E90FF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp" />

                <LinearLayout
                    android:id="@+id/interiorGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="4dp">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkSeats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#1E90FF"
                        android:text="Seats - Proper condition and adjustment"
                        android:textColor="@android:color/white" />
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkDashboard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#1E90FF"
                        android:text="Dashboard - All warning lights off"
                        android:textColor="@android:color/white" />
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkControls"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#1E90FF"
                        android:text="Controls - All functioning properly"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <!-- Mechanical -->
                <TextView
                    android:id="@+id/mechanicalLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mechanical"
                    android:textColor="#1E90FF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp" />

                <LinearLayout
                    android:id="@+id/mechanicalGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="4dp">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkBrakes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#1E90FF"
                        android:text="Brakes - Responsive and even"
                        android:textColor="@android:color/white" />
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkEngine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#1E90FF"
                        android:text="Engine - No unusual noises or leaks"
                        android:textColor="@android:color/white" />
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkTransmission"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#1E90FF"
                        android:text="Transmission - Smooth shifting"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Notes Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/notesCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#1E1E1E"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/inspectionCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/notesLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Additional Notes"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/notesLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="@android:color/white"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeColor="#1E90FF"
                    app:hintTextColor="#666666"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/notesInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="120dp"
                        android:background="@android:color/white"
                        android:gravity="top|start"
                        android:hint="Enter any additional notes or observations"
                        android:inputType="textMultiLine"
                        android:padding="12dp"
                        android:textColor="#121212"
                        android:textColorHint="#666666"
                        android:scrollbars="vertical" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Submit Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/submitButton"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingVertical="16dp"
            android:text="Submit Inspection"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:backgroundTint="#1E90FF"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_check_circle"
            app:iconGravity="textStart"
            app:iconTint="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/notesCard" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>