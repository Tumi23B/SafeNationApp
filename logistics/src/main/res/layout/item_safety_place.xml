<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/placeCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/placeTypeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸš“ Police Station"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/placeNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Local Police Station"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/placeDistanceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="250m away"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Tap for directions â†’"
            android:textSize="12sp"
            android:textColor="#2196F3" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>