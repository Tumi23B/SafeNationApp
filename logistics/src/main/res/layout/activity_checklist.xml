<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".ui.Checklist">

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Header -->
            <TextView
                android:id="@+id/checklistHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver Pre-Trip Checklist"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginBottom="24dp"/>

            <!-- Checklist Items -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tip_background"
                android:padding="12dp"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">
                <CheckBox
                    android:id="@+id/checkFuel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⛽ Check fuel level"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tip_background"
                android:padding="12dp"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">
                <CheckBox
                    android:id="@+id/checkLights"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💡 Check lights and indicators"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tip_background"
                android:padding="12dp"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">
                <CheckBox
                    android:id="@+id/checkTires"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🛞 Inspect tires and tire pressure"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tip_background"
                android:padding="12dp"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">
                <CheckBox
                    android:id="@+id/checkBrakes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🛑 Test brakes and handbrake"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tip_background"
                android:padding="12dp"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">
                <CheckBox
                    android:id="@+id/checkMirrors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔍 Adjust mirrors"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tip_background"
                android:padding="12dp"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical">
                <CheckBox
                    android:id="@+id/checkLoad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📦 Secure load and cargo"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"/>
            </LinearLayout>

            <!-- Submit Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/submitChecklistButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Checklist"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:layout_marginBottom="32dp"
                android:backgroundTint="#04A1E9"
                app:cornerRadius="20dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

