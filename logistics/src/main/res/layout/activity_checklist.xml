<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fitsSystemWindows="true"
    tools:context=".ui.Checklist">

    <!-- Status bar background to ensure contrast -->
    <View
        android:id="@+id/statusBarBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight="@dimen/status_bar_height" />

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/statusBarBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Header -->
            <TextView
                android:id="@+id/checklistHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver Pre-Trip Checklist"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"/>

            <!-- Checklist Items -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#1A1A1A"
                app:strokeColor="#04A1E9"
                app:strokeWidth="1dp"
                android:layout_marginBottom="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <CheckBox
                        android:id="@+id/checkFuel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⛽ Check fuel level"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#1A1A1A"
                app:strokeColor="#04A1E9"
                app:strokeWidth="1dp"
                android:layout_marginBottom="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <CheckBox
                        android:id="@+id/checkLights"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="💡 Check lights and indicators"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#1A1A1A"
                app:strokeColor="#04A1E9"
                app:strokeWidth="1dp"
                android:layout_marginBottom="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <CheckBox
                        android:id="@+id/checkTires"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🛞 Inspect tires and tire pressure"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#1A1A1A"
                app:strokeColor="#04A1E9"
                app:strokeWidth="1dp"
                android:layout_marginBottom="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <CheckBox
                        android:id="@+id/checkBrakes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🛑 Test brakes and handbrake"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#1A1A1A"
                app:strokeColor="#04A1E9"
                app:strokeWidth="1dp"
                android:layout_marginBottom="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <CheckBox
                        android:id="@+id/checkMirrors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🔍 Adjust mirrors"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#1A1A1A"
                app:strokeColor="#04A1E9"
                app:strokeWidth="1dp"
                android:layout_marginBottom="24dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <CheckBox
                        android:id="@+id/checkLoad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📦 Secure load and cargo"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Submit Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/submitChecklistButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Submit Checklist"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="#04A1E9"
                android:textColor="@android:color/white"
                app:cornerRadius="30dp"
                android:layout_marginBottom="32dp"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>