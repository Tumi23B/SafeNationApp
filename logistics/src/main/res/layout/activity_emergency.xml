<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".ui.Emergency">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Header -->
            <TextView
                android:id="@+id/emergencyHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency Contacts and First Aid"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginBottom="24dp"/>

            <!-- South African Emergency Contacts -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#111111"
                app:cardElevation="6dp"
                app:strokeColor="#04A1E9"
                app:strokeWidth="2dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/policeCard">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="🚨 Police: 10111"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#111111"
                app:cardElevation="6dp"
                app:strokeColor="#04A1E9"
                app:strokeWidth="2dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/ambulanceCard">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="🚑 Ambulance / Medical: 10177"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#111111"
                app:cardElevation="6dp"
                app:strokeColor="#04A1E9"
                app:strokeWidth="2dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/fireCard">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="🔥 Fire Department: 10177"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#111111"
                app:cardElevation="6dp"
                app:strokeColor="#04A1E9"
                app:strokeWidth="2dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/childlineCard">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="📞 Childline / Assistance: 0800 055 555"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#111111"
                app:cardElevation="6dp"
                app:strokeColor="#04A1E9"
                app:strokeWidth="2dp"
                android:layout_marginBottom="24dp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/disasterCard">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="📡 Disaster Management: 0800 020 111"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"/>
            </androidx.cardview.widget.CardView>

            <!-- First Aid Tips Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Aid Tips"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#04A1E9"
                android:layout_marginBottom="16dp"/>

            <!-- First Aid Cards -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#111111"
                app:cardElevation="6dp"
                app:strokeColor="#04A1E9"
                app:strokeWidth="2dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/bleedingCard">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="🩸 Bleeding: Apply direct pressure to the wound using a clean cloth."
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#111111"
                app:cardElevation="6dp"
                app:strokeColor="#04A1E9"
                app:strokeWidth="2dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/burnsCard">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="🤕 Burns: Cool the area under running water for at least 10 minutes."
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#111111"
                app:cardElevation="6dp"
                app:strokeColor="#04A1E9"
                app:strokeWidth="2dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/chokingCard">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="💨 Choking: Perform the Heimlich maneuver if the person is conscious."
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#111111"
                app:cardElevation="6dp"
                app:strokeColor="#04A1E9"
                app:strokeWidth="2dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/fracturesCard">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="🛡️ Fractures: Immobilize the area with a splint and avoid moving the person unnecessarily."
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
